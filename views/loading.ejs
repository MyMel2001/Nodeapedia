<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Loading... - Nodeapedia</title>
    <link href="/css/style.css" rel="stylesheet">
    <script src="/js/theme.js" defer></script>
    <script>
        async function initLoading() {
            const title = "<%= title %>";
            const encodedTitle = encodeURIComponent(title);

            // 1. Tell the server to start processing in the background
            try {
                await fetch(`/api/job/${encodedTitle}`, { method: 'POST' });
            } catch (err) {
                console.error("Failed to start job:", err);
            }

            // 2. Poll every 3 seconds to see if it's done
            const pollInterval = setInterval(async () => {
                try {
                    const response = await fetch(`/api/job/${encodedTitle}`);
                    const result = await response.json();

                    if (result.status === 'completed') {
                        clearInterval(pollInterval);
                        window.location.href = `/article/${encodedTitle}?ready=true`;
                    } else if (result.status === 'failed') {
                        clearInterval(pollInterval);
                        alert("Fact-checking failed. Please try again.");
                        window.location.href = "/";
                    }
                } catch (err) {
                    console.error("Polling error:", err);
                }
            }, 3000);
        }

        window.onload = initLoading;
    </script>
</head>
<body class="bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100 transition-colors duration-200 flex items-center justify-center h-screen">
    <div class="text-center">
        <div class="animate-spin rounded-full h-16 w-16 border-t-4 border-blue-600 border-opacity-50 mx-auto mb-4"></div>
        <h2 class="text-2xl font-bold mb-2">Fact-checking with AI...</h2>
        <p class="text-gray-600 dark:text-gray-400">Comparing Wikipedia content with real-time search results for "<%= title %>".</p>
    </div>
</body>
</html>
